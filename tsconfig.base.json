{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "strict": true,
      "skipLibCheck": true,
      "composite": true,
      "baseUrl": ".",
      "paths": {
        // "@gaza/runtime": ["packages/runtime/dist"],
        // "@gaza/render-web": ["packages/render-web/dist"],
        // "@gaza/app": ["packages/app/dist"],
        // "@gaza/ir": ["packages/ir/dist"]
      },
    },
    "exclude": ["node_modules", "dist"]
  }